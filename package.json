{
	"name": "cspell-grammar-repo",
	"description": "A tmLanguage based Grammar Parser for cSpell",
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/fs-extra": "^7.0.0",
		"@types/js-yaml": "^3.12.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^8.10.48",
		"@types/xregexp": "^3.0.30",
		"chai": "^4.2.0",
		"coveralls": "^3.0.3",
		"cspell-grammar-syntax": "^0.1.5",
		"gensequence": "^2.1.2",
		"lerna": "^3.14.1",
		"mocha": "^6.1.4",
		"nyc": "^14.1.1",
		"rimraf": "^2.6.3",
		"ts-node": "^8.1.0",
		"tslint": "^5.16.0",
		"typescript": "^3.4.5",
		"vscode-textmate": "^3.3.3"
	},
	"scripts": {
		"test": "npm run lerna-test",
		"build": "npm run lerna-build",
		"bootstrap": "lerna bootstrap",
		"lint-travis": "lerna run lint-travis",
		"prepare": "lerna bootstrap && npm run build",
		"lerna-build": "lerna run build",
		"lerna-test": "lerna run test",
		"coverage": "rimraf .nyc_output && npm run generate-code-coverage && nyc report --reporter=lcov --reporter=html",
		"generate-code-coverage": "lerna run generate-code-coverage",
		"coverage-coveralls": "npm run generate-code-coverage && nyc report --reporter=text-lcov | coveralls"
	},
	"author": "Jason Dent",
	"license": "MIT",
	"private": true,
	"bugs": {
		"url": "https://github.com/Jason3S/cspell-grammar/issues"
	},
	"homepage": "https://github.com/Jason3S/cspell-grammar#readme",
	"nyc": {
		"include": [
		  "**/src/**/*.ts"
		],
		"exclude": [
		  "**/src/**/*.test.ts",
		  "**/src/**/*.spec.ts",
		  "**/src/fixtures/**"
		],
		"extension": [
		  ".ts"
		],
		"require": [
		  "ts-node/register"
		],
		"reporter": [
		  "json",
		  "html"
		]
	}
}
