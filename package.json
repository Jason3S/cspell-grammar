{
	"name": "cspell-grammar-repo",
	"description": "A tmLanguage based Grammar Parser for cSpell",
	"devDependencies": {
		"@types/fs-extra": "^8.0.1",
		"@types/jest": "^25.1.1",
		"@types/js-yaml": "^3.12.2",
		"@types/node": "^10.17.14",
		"@types/xregexp": "^3.0.30",
		"coveralls": "^3.0.9",
		"cspell-grammar-syntax": "^0.1.5",
		"gensequence": "^3.0.3",
		"globcat": "^1.2.0",
		"jest": "^25.1.0",
		"lerna": "^3.20.2",
		"rimraf": "^2.7.1",
		"strip-ansi": "^6.0.0",
		"ts-jest": "^24.3.0",
		"tslint": "^6.0.0",
		"typescript": "^3.7.5",
		"vscode-textmate": "^4.4.0"
	},
	"scripts": {
		"test": "npm run lerna-test",
		"build": "npm run lerna-build",
		"bootstrap": "lerna bootstrap",
		"lint-travis": "lerna run lint-travis",
		"prepare": "lerna bootstrap && npm run build",
		"lerna-build": "lerna run build",
		"lerna-test": "lerna run test",
		"coverage": "npm run generate-code-coverage",
		"generate-code-coverage": "lerna run generate-code-coverage",
		"coverage-coveralls": "npm run generate-code-coverage && globcat packages/*/coverage/lcov.info | coveralls"
	},
	"author": "Jason Dent",
	"license": "MIT",
	"private": true,
	"bugs": {
		"url": "https://github.com/Jason3S/cspell-grammar/issues"
	},
	"homepage": "https://github.com/Jason3S/cspell-grammar#readme",
	"nyc": {
		"include": [
			"**/src/**/*.ts"
		],
		"exclude": [
			"**/src/**/*.test.ts",
			"**/src/**/*.spec.ts",
			"**/src/fixtures/**"
		],
		"extension": [
			".ts"
		],
		"require": [
			"ts-node/register"
		],
		"reporter": [
			"json",
			"html"
		]
	}
}
